# Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# ============================================
# AI & Claude Configuration
# ============================================
GEMINI_API_KEY=your_gemini_api_key_here

# ============================================
# AI Provider Configuration (Multi-Provider Support)
# ============================================
# Active provider for Claude Code execution
# Options: BONSAI, GEMINI_ROUTER, QWEN_ROUTER, KIRO, NATIVE
ACTIVE_PROVIDER=BONSAI

# Fallback priority (comma-separated, no spaces)
# Orchestrator will try providers in this order if primary fails
PROVIDER_PRIORITY_LIST=BONSAI,GEMINI_ROUTER,QWEN_ROUTER,KIRO,NATIVE

# Router endpoint for GEMINI_ROUTER, QWEN_ROUTER, KIRO
# Required for router-based providers
# Example: http://localhost:8080/v1 or https://your-router-endpoint.com/v1
CLAUDE_CODE_API_ENDPOINT=

# Provider-specific timeouts (seconds)
# Increase for complex reasoning tasks with frontier models
PROVIDER_TIMEOUT_BONSAI=600
PROVIDER_TIMEOUT_ROUTER=600
PROVIDER_TIMEOUT_NATIVE=600

# ============================================
# Financial Integration (Xero)
# ============================================
XERO_CLIENT_ID=your_xero_client_id_here
XERO_CLIENT_SECRET=your_xero_client_secret_here
XERO_TENANT_ID=your_xero_tenant_id_here
XERO_REDIRECT_URI=http://localhost:8080/callback

# ============================================
# Social Media Integration
# ============================================
# LinkedIn
LINKEDIN_ACCESS_TOKEN=your_linkedin_token_here
LINKEDIN_CLIENT_ID=your_linkedin_client_id_here
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret_here

# Twitter/X
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_SECRET=your_twitter_access_secret_here

# Instagram (via Facebook Graph API)
INSTAGRAM_ACCESS_TOKEN=your_instagram_token_here
INSTAGRAM_BUSINESS_ACCOUNT_ID=your_instagram_account_id_here

# ============================================
# Email Integration
# ============================================
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=your_email@example.com
EMAIL_PASSWORD=your_email_app_password_here
EMAIL_FROM_ADDRESS=your_email@example.com
EMAIL_FROM_NAME=Digital FTE

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=sqlite:///digital_fte.db
# For PostgreSQL: postgresql://user:password@localhost:5432/digital_fte

# ============================================
# Application Settings
# ============================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# ============================================
# Security
# ============================================
SECRET_KEY=your_secret_key_for_encryption_here
JWT_SECRET=your_jwt_secret_here

# ============================================
# Orchestrator Settings
# ============================================
ORCHESTRATOR_POLL_INTERVAL=1
ORCHESTRATOR_TIMEOUT=300
CLAUDE_CLI_PATH=claude

# ============================================
# Optional: Additional Integrations
# ============================================
# Slack
SLACK_BOT_TOKEN=your_slack_bot_token_here
SLACK_SIGNING_SECRET=your_slack_signing_secret_here

# Notion
NOTION_API_KEY=your_notion_api_key_here

# Google Calendar
GOOGLE_CALENDAR_CREDENTIALS=path/to/credentials.json
